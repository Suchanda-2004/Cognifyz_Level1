<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>JavaScript Tasks</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      padding: 20px;
    }

    button {
      margin: 10px 0;
      padding: 10px 15px;
      font-size: 16px;
    }

    input {
      padding: 5px;
      font-size: 14px;
    }

    #result {
      font-weight: bold;
      margin-top: 10px;
    }
  </style>
</head>
<body>

  <h1>JavaScript Practice</h1>

  <!-- Task 1: Button that changes color -->
  <h2>1. Color Change Button</h2>
  <button id="colorButton">Click Me!</button>

  <!-- Task 2: Greeting Alert based on time -->
  <h2>2. Greeting Message</h2>
  <button onclick="showGreeting()">Show Greeting</button>

  <!-- Task 3: Basic Calculator -->
  <h2>3. Simple Calculator (Add Two Numbers)</h2>
  <input type="number" id="num1" placeholder="First number">
  <input type="number" id="num2" placeholder="Second number">
  <button onclick="addNumbers()">Add</button>
  <p id="result"></p>

  <!-- JavaScript Code -->
  <script>
    // Task 1: Change button color when clicked
    const colorButton = document.getElementById("colorButton");
    colorButton.addEventListener("click", function() {
      // Change to a different color each time
      const colors = ["blue", "green", "red", "purple", "orange"];
      const randomColor = colors[Math.floor(Math.random() * colors.length)];
      colorButton.style.backgroundColor = randomColor;
    });

    // Task 2: Show greeting based on time
    function showGreeting() {
      const hour = new Date().getHours();
      let greeting;

      if (hour < 12) {
        greeting = "Good morning!";
      } else if (hour < 18) {
        greeting = "Good afternoon!";
      } else {
        greeting = "Good evening!";
      }

      alert(greeting);
    }

    // Task 3: Add two numbers
    function addNumbers() {
      const num1 = parseFloat(document.getElementById("num1").value);
      const num2 = parseFloat(document.getElementById("num2").value);

      if (isNaN(num1) || isNaN(num2)) {
        document.getElementById("result").textContent = "Please enter valid numbers.";
      } else {
        const sum = num1 + num2;
        document.getElementById("result").textContent = "Result: " + sum;
      }
    }
  </script>

</body>
</html>
